@model IEnumerable<BookStore.Domain.Entities.Book>

@{
    ViewBag.Title = "Admin: All Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="panel panel-default">
    <div class="panel-heading">
        <h2>All Books</h2>
        <div class="text-right form-group">
            <form action="Index" method="post">
                <input id="searchValue" name="searchValue" class="" style="width:200px;" type="text" placeholder="Search for Book" />
                <input type="submit" value="Search" class="btn btn-info" />
            </form>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-condensed table-striped table-bordered">
            <tr>
                <th class="text-right">
                    ID
                </th>
                <th>
                    Title
                </th>
                @*<th>
                        Description
                    </th>*@
                <th class="text-right">
                    Price
                </th>
                <th>
                    Category
                </th>
                <th>
                    Author
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td>
                        @Html.ActionLink(item.Title, "Edit", new { item.ISBN })
                        @*@Html.DisplayFor(modelItem => item.Title)*@
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>*@
                    <td class="text-right">
                        @*@Html.DisplayFor(modelItem => item.Price)*@
                        @item.Price.ToString("c")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ISBN }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ISBN }) |*@
                        @Html.ActionLink("Delete", "Delete", new { item.ISBN }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add New Book", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>